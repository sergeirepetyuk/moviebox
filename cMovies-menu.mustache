<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <link rel="stylesheet" href="style/Movie.css">
    <link rel="stylesheet" href="style/Movies-menu.css">
</head>
<body>
    <div class="Movies-menu">
        {{#movie}}
            <article class="Movie">
                <img class="Movie__poster" src="{{image}}" alt="">
                <p class="Movie__year">{{year}}</p>
                <p class="Movie__name">{{name}}</p>
                <p class="Movie__genre">{{genre}}</p>
                <div class="Movie__rating">{{rating}}</div>
            </article>
        {{/movie}}
    </div>
</body>
</html>